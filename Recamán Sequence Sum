///
Recam√°n Sequence Sum
https://www.codewars.com/kata/5b8c055336332fce3d00000e/train/python
///
seen = set([0])
cumsum = [0,0]
last = 0

for n in range(1,2500000):
    i = last - n
    
    if i <= 0 or i in seen:
        i = last + n
        
    seen.add(i)
    last = i
    cumsum.append(cumsum[-1] + last)

def rec(x):
    return cumsum[x]
